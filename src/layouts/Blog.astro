---
import Footer from "@/components/Footer.svelte";
import Main from "@/components/Main.svelte";
import Navbar from "@/components/Navbar.svelte";
import "@/layouts/blog.css";
import "@fontsource-variable/jetbrains-mono";
import "@fontsource/ibm-plex-sans-thai-looped";
import { ViewTransitions } from "astro:transitions";

type Props = {
    title: string;
    tags: string[];
    og: string | undefined;
};

const { title, og } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={title} />
        {og && <meta property="og:image" content={og} />}
        <ViewTransitions fallback="swap" />

        <title>{title}</title>
    </head>
    <body class="flex min-h-screen flex-col items-center bg-mainlight">
        <Navbar
            client:load
            transition:animate="none"
            transition:persist
            transition:name="nav"
        />

        <Main>
            <article class="minimalist">
                <slot />
            </article>
        </Main>
        <Footer />

        <style>
            ::selection {
                @apply bg-indigo-400 bg-opacity-50 text-white;
            }
        </style>
    </body>
</html>
