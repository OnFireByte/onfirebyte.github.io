---
import Footer from "@/components/Footer.svelte";
import Navbar from "@/components/Navbar.svelte";
import "@fontsource-variable/jetbrains-mono";
import "@fontsource/ibm-plex-sans-thai-looped";
import { ViewTransitions } from "astro:transitions";
import "./main.css";

interface Props {
    title: string;
    class?: string;
}

let { title, class: bodyClass } = Astro.props;
bodyClass ??= "";
---

<!doctype html>
<html lang="en" class="bg-maindark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions fallback="swap" />
        <title>{title}</title>
        <style></style>
    </head>
    <body class="">
        <div class="relative flex min-h-screen flex-col overflow-y-scroll">
            <Navbar
                client:load
                transition:animate="none"
                transition:persist
                transition:name="nav"
            />
            <div
                class={`${bodyClass} text-maindark justify-center flex h-full grow`}
            >
                <slot />
            </div>
            <Footer />
            <div class="grad-bg fixed -z-10 h-full w-full md:absolute"></div>
        </div>
    </body>
</html>
