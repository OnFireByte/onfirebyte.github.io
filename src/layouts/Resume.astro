---
import Download from "@/components/Download.astro";
import Navbar from "@/components/Navbar.svelte";
import "@/layouts/resume.css";
import "@fontsource-variable/jetbrains-mono";
import { ViewTransitions } from "astro:transitions";

type Props = {
    frontmatter: {
        title: string;
        pdfLink?: string;
        noIndex?: boolean;
        description?: string;
    };
};

const { title, pdfLink, noIndex, description } = Astro.props.frontmatter;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description || title} />
        {noIndex && <meta name="robots" content="noindex" />}
        <ViewTransitions />
        <title>{title}</title>
    </head>
    <body class="flex min-h-screen flex-col items-center bg-mainlight">
        <Navbar
            client:load
            transition:animate="none"
            transition:persist
            transition:name="nav"
        />
        <div class="m-8 print:m-0">
            <article class="minimalist relative">
                <div class="not-prose absolute right-8 top-8 print:top-0">
                    <Download />
                </div>
                <slot />
            </article>
        </div>
        <style>
            body {
                font-family: "JetBrains Mono Variable", sans-serif;
            }

            ::selection {
                @apply bg-indigo-400 bg-opacity-50 text-white;
            }
        </style>
    </body>
</html>
